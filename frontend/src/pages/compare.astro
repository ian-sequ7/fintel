---
import Layout from "../layouts/Layout.astro";
import CompareView from "../components/islands/CompareView";
---

<Layout title="Compare Stocks" description="Compare stock picks side-by-side with key metrics, fundamentals, and investment thesis.">
  <!-- Page header -->
  <div class="mb-6">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold text-text-primary">Compare Stocks</h1>
        <p class="text-text-secondary">
          Side-by-side comparison of selected stocks
        </p>
      </div>
      <a
        href="/picks"
        class="text-sm text-accent hover:underline"
      >
        ‚Üê Back to Picks
      </a>
    </div>
  </div>

  <!-- Compare view (React island) - loads stockDetails lazily -->
  <CompareView client:load />
</Layout>
