---
interface Props {
  title?: string;
  variant?: "default" | "highlighted" | "warning";
  class?: string;
}

const {
  title,
  variant = "default",
  class: className = "",
} = Astro.props;

const variantClasses = {
  default: "bg-bg-surface border-border",
  highlighted: "bg-bg-surface border-l-4 border-l-accent border-y-border border-r-border",
  warning: "bg-bg-surface border-l-4 border-l-danger border-y-border border-r-border",
};
---

<div
  class:list={[
    "rounded-lg border p-4",
    variantClasses[variant],
    className,
  ]}
>
  {
    title && (
      <h3 class="text-sm font-semibold text-text-secondary uppercase tracking-wide mb-3">
        {title}
      </h3>
    )
  }
  <slot />
</div>
