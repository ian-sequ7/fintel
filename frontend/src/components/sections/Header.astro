---
import ThemeToggle from "../islands/ThemeToggle";
import { WatchlistBadge } from "../islands/WatchlistManager";
import PriceFreshness from "../composed/PriceFreshness.astro";

const navItems = [
  { href: "/", label: "Overview" },
  { href: "/briefing", label: "Briefing" },
  { href: "/picks", label: "Picks" },
  { href: "/heatmap", label: "Heat Map" },
  { href: "/smartmoney", label: "Smart Money" },
  { href: "/macro", label: "Macro" },
  { href: "/news", label: "News" },
  { href: "/watchlist", label: "Watchlist", hasNotification: true },
  { href: "/portfolio", label: "Portfolio" },
];

const currentPath = Astro.url.pathname;

// Check if nav item is active (exact match for home, startsWith for others)
function _isActive(href: string): boolean {
  if (href === "/") {
    return currentPath === "/";
  }
  return currentPath.startsWith(href);
}
---

<header class="bg-bg-surface border-b border-border sticky top-0 z-50">
  <div class="container mx-auto px-4 max-w-7xl">
    <div class="flex items-center justify-between h-16">
      <!-- Logo - CNN Business editorial style -->
      <a href="/" class="flex items-center gap-2 hover:opacity-80 transition-opacity">
        <span class="font-serif font-bold text-2xl text-text-primary tracking-tight">Fintel</span>
      </a>

      <!-- Navigation - CNN Business style with red underline -->
      <nav class="hidden md:flex items-center gap-0">
        {
          navItems.map((item) => (
            <a
              href={item.href}
              class:list={[
                "px-4 py-4 text-sm font-medium transition-colors relative border-b-2",
                _isActive(item.href)
                  ? "text-text-primary border-[var(--tab-active)]"
                  : "text-text-secondary hover:text-text-primary border-transparent hover:border-border",
              ]}
            >
              {item.label}
              {item.hasNotification && <WatchlistBadge client:load />}
            </a>
          ))
        }
      </nav>

      <!-- Right side -->
      <div class="flex items-center gap-3">
        <div class="hidden sm:block">
          <PriceFreshness />
        </div>
        <ThemeToggle client:load />

        <!-- Mobile menu button -->
        <button
          class="md:hidden p-2 rounded-lg bg-bg-surface border border-border hover:bg-bg-elevated transition-colors"
          aria-label="Open menu"
          id="mobile-menu-button"
        >
          <svg
            class="w-5 h-5 text-text-primary"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M4 6h16M4 12h16M4 18h16"
            />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile menu -->
  <div
    class="hidden md:hidden border-t border-border"
    id="mobile-menu"
  >
    <nav class="container mx-auto px-4 py-2">
      {
        navItems.map((item) => (
          <a
            href={item.href}
            class:list={[
              "block px-3 py-3 text-sm font-medium transition-colors relative border-l-2",
              _isActive(item.href)
                ? "text-text-primary border-[var(--tab-active)] bg-bg-elevated"
                : "text-text-secondary hover:text-text-primary border-transparent",
            ]}
          >
            <span class="inline-flex items-center gap-2">
              {item.label}
              {item.hasNotification && <WatchlistBadge client:load />}
            </span>
          </a>
        ))
      }
    </nav>
  </div>
</header>

<script>
  const menuButton = document.getElementById("mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");

  menuButton?.addEventListener("click", () => {
    mobileMenu?.classList.toggle("hidden");
  });
</script>
