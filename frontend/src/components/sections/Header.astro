---
import ThemeToggle from "../islands/ThemeToggle";
import { WatchlistBadge } from "../islands/WatchlistManager";

const navItems = [
  { href: "/", label: "Overview" },
  { href: "/picks", label: "Picks" },
  { href: "/macro", label: "Macro" },
  { href: "/news", label: "News" },
  { href: "/watchlist", label: "Watchlist", hasNotification: true },
];

const currentPath = Astro.url.pathname;

// Check if nav item is active (exact match for home, startsWith for others)
function _isActive(href: string): boolean {
  if (href === "/") {
    return currentPath === "/";
  }
  return currentPath.startsWith(href);
}
---

<header class="bg-bg-surface border-b border-border sticky top-0 z-50">
  <div class="container mx-auto px-4 max-w-7xl">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 font-bold text-xl text-text-primary hover:text-accent transition-colors">
        <svg
          class="w-8 h-8 text-accent"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"
          />
        </svg>
        <span>Financial Intel</span>
      </a>

      <!-- Navigation -->
      <nav class="hidden md:flex items-center gap-1">
        {
          navItems.map((item) => (
            <a
              href={item.href}
              class:list={[
                "px-3 py-2 text-sm font-medium rounded-lg transition-colors relative",
                _isActive(item.href)
                  ? "bg-accent/10 text-accent"
                  : "text-text-secondary hover:text-text-primary hover:bg-bg-elevated",
              ]}
            >
              {item.label}
              {item.hasNotification && <WatchlistBadge client:load />}
            </a>
          ))
        }
      </nav>

      <!-- Right side -->
      <div class="flex items-center gap-3">
        <ThemeToggle client:load />

        <!-- Mobile menu button -->
        <button
          class="md:hidden p-2 rounded-lg bg-bg-surface border border-border hover:bg-bg-elevated transition-colors"
          aria-label="Open menu"
          id="mobile-menu-button"
        >
          <svg
            class="w-5 h-5 text-text-primary"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M4 6h16M4 12h16M4 18h16"
            />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile menu -->
  <div
    class="hidden md:hidden border-t border-border"
    id="mobile-menu"
  >
    <nav class="container mx-auto px-4 py-2">
      {
        navItems.map((item) => (
          <a
            href={item.href}
            class:list={[
              "block px-3 py-2 text-sm font-medium rounded-lg transition-colors relative",
              _isActive(item.href)
                ? "bg-accent/10 text-accent"
                : "text-text-secondary hover:text-text-primary hover:bg-bg-elevated",
            ]}
          >
            <span class="inline-flex items-center gap-2">
              {item.label}
              {item.hasNotification && <WatchlistBadge client:load />}
            </span>
          </a>
        ))
      }
    </nav>
  </div>
</header>

<script>
  const menuButton = document.getElementById("mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");

  menuButton?.addEventListener("click", () => {
    mobileMenu?.classList.toggle("hidden");
  });
</script>
