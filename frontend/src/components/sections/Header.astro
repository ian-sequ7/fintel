---
import ThemeToggle from "../islands/ThemeToggle";
import { WatchlistBadge } from "../islands/WatchlistManager";
import PriceFreshness from "../composed/PriceFreshness.astro";

// Grouped navigation structure (Bloomberg/MarketWatch style)
interface NavItem {
  href: string;
  label: string;
  hasNotification?: boolean;
}

interface NavGroup {
  label: string;
  items: NavItem[];
}

const navGroups: NavGroup[] = [
  {
    label: "Markets",
    items: [
      { href: "/", label: "Overview" },
      { href: "/heatmap", label: "Heat Map" },
      { href: "/picks", label: "Stock Picks" },
    ],
  },
  {
    label: "Analysis",
    items: [
      { href: "/briefing", label: "Daily Briefing" },
      { href: "/smartmoney", label: "Smart Money" },
      { href: "/macro", label: "Macro Indicators" },
      { href: "/news", label: "Market News" },
      { href: "/performance", label: "Performance" },
    ],
  },
  {
    label: "My Stocks",
    items: [
      { href: "/watchlist", label: "Watchlist", hasNotification: true },
      { href: "/portfolio", label: "Portfolio" },
    ],
  },
];

const currentPath = Astro.url.pathname;

// Check if nav item is active (exact match for home, startsWith for others)
function _isActive(href: string): boolean {
  if (href === "/") {
    return currentPath === "/";
  }
  return currentPath.startsWith(href);
}

// Check if any item in a group is active
function _isGroupActive(group: NavGroup): boolean {
  return group.items.some((item) => _isActive(item.href));
}
---

<header class="bg-bg-surface border-b border-border sticky top-0 z-50">
  <div class="container mx-auto px-4 max-w-7xl">
    <div class="flex items-center justify-between h-16">
      <!-- Logo - CNN Business editorial style -->
      <a href="/" class="flex items-center gap-2 hover:opacity-80 transition-opacity">
        <span class="font-serif font-bold text-2xl text-text-primary tracking-tight">Fintel</span>
      </a>

      <!-- Navigation - Grouped dropdowns (Bloomberg/MarketWatch style) -->
      <nav class="hidden md:flex items-center gap-1">
        {
          navGroups.map((group) => (
            <div class="nav-dropdown relative group">
              <button
                class:list={[
                  "px-4 py-4 text-sm font-medium transition-colors relative border-b-2 inline-flex items-center gap-1",
                  _isGroupActive(group)
                    ? "text-text-primary border-[var(--tab-active)]"
                    : "text-text-secondary hover:text-text-primary border-transparent",
                ]}
                aria-haspopup="true"
              >
                {group.label}
                <svg class="w-3.5 h-3.5 transition-transform group-hover:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
                </svg>
              </button>

              <!-- Dropdown menu -->
              <div class="absolute left-0 top-full pt-1 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-150 z-50">
                <div class="bg-bg-surface border border-border rounded-md shadow-lg py-1 min-w-[180px]">
                  {group.items.map((item) => (
                    <a
                      href={item.href}
                      class:list={[
                        "block px-4 py-2.5 text-sm transition-colors",
                        _isActive(item.href)
                          ? "text-text-primary bg-bg-elevated border-l-2 border-[var(--tab-active)]"
                          : "text-text-secondary hover:text-text-primary hover:bg-bg-elevated border-l-2 border-transparent",
                      ]}
                    >
                      <span class="inline-flex items-center gap-2">
                        {item.label}
                        {item.hasNotification && <WatchlistBadge client:load />}
                      </span>
                    </a>
                  ))}
                </div>
              </div>
            </div>
          ))
        }
      </nav>

      <!-- Right side -->
      <div class="flex items-center gap-3">
        <div class="hidden sm:block">
          <PriceFreshness />
        </div>
        <ThemeToggle client:load />

        <!-- Mobile menu button -->
        <button
          class="md:hidden p-2 rounded-lg bg-bg-surface border border-border hover:bg-bg-elevated transition-colors"
          aria-label="Open menu"
          id="mobile-menu-button"
        >
          <svg
            class="w-5 h-5 text-text-primary"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M4 6h16M4 12h16M4 18h16"
            />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile menu with collapsible groups -->
  <div
    class="hidden md:hidden border-t border-border bg-bg-surface"
    id="mobile-menu"
  >
    <nav class="container mx-auto px-4 py-2">
      {
        navGroups.map((group, groupIndex) => (
          <div class="mobile-nav-group border-b border-border last:border-b-0">
            <button
              class="mobile-group-toggle w-full flex items-center justify-between px-3 py-3 text-sm font-medium text-text-primary"
              data-group={groupIndex}
              aria-expanded="false"
            >
              <span class:list={[
                _isGroupActive(group) ? "text-[var(--tab-active)]" : ""
              ]}>
                {group.label}
              </span>
              <svg class="w-4 h-4 transition-transform text-text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
              </svg>
            </button>
            <div class="mobile-group-items hidden pl-3 pb-2" data-group-items={groupIndex}>
              {group.items.map((item) => (
                <a
                  href={item.href}
                  class:list={[
                    "block px-3 py-2.5 text-sm transition-colors border-l-2",
                    _isActive(item.href)
                      ? "text-text-primary border-[var(--tab-active)] bg-bg-elevated"
                      : "text-text-secondary hover:text-text-primary border-transparent",
                  ]}
                >
                  <span class="inline-flex items-center gap-2">
                    {item.label}
                    {item.hasNotification && <WatchlistBadge client:load />}
                  </span>
                </a>
              ))}
            </div>
          </div>
        ))
      }
    </nav>
  </div>
</header>

<script>
  // Mobile menu toggle
  const menuButton = document.getElementById("mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");

  function closeMobileMenu() {
    mobileMenu?.classList.add("hidden");
    menuButton?.setAttribute("aria-expanded", "false");
  }

  function toggleMobileMenu() {
    const isHidden = mobileMenu?.classList.toggle("hidden");
    menuButton?.setAttribute("aria-expanded", String(!isHidden));
  }

  menuButton?.addEventListener("click", toggleMobileMenu);

  // Escape key closes mobile menu
  document.addEventListener("keydown", (e) => {
    if (e.key === "Escape" && !mobileMenu?.classList.contains("hidden")) {
      closeMobileMenu();
      menuButton?.focus();
    }
  });

  // Mobile group toggles
  document.querySelectorAll(".mobile-group-toggle").forEach((button) => {
    button.addEventListener("click", () => {
      const groupIndex = button.getAttribute("data-group");
      const items = document.querySelector(`[data-group-items="${groupIndex}"]`);
      const isExpanded = button.getAttribute("aria-expanded") === "true";

      // Toggle this group
      button.setAttribute("aria-expanded", String(!isExpanded));
      items?.classList.toggle("hidden");

      // Rotate chevron
      const chevron = button.querySelector("svg");
      chevron?.classList.toggle("rotate-180");
    });
  });
</script>
